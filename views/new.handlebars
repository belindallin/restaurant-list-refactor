<form action="/restaurants" method="POST">
  <div class="createForm d-flex flex-column  justify-content-center mx-auto" style="width: 50vw;">
      <div class="form row d-flex flex-row">
        <label for="staticName" class="col-sm-2 col-form-label mr-5">name:</label>
        <input type="text" placeholder="name" name="name" class="col-sm-9 my-2"required>
      </div>
      <div class="form row d-flex flex-row">
        <label for="staticName_en" class="col-sm-2 col-form-label mr-5">name_en:</label>
        <input type="text" placeholder="name_en" name="name_en" class="col-sm-9 my-2">
      </div>
      <div class="form row d-flex flex-row">
        <label for="staticCategory" class="col-sm-2 col-form-label mr-5">category:</label>
        <input type="text" placeholder="義式、美式" name="category" class="col-sm-9 my-2">
      </div>
      <div class="form row d-flex flex-row">
        <label for="staticImage" class="col-sm-2 col-form-label mr-5">image:</label>
        <input type="text" placeholder="https://...jpg" name="image" class="col-sm-9 my-2">
      </div>
      <div class="form row d-flex flex-row">
        <label for="staticLocation" class="col-sm-2 col-form-label mr-5">location:</label>
        <input type="text" placeholder="台北市東區..." name="location" class="col-sm-9 my-2">
      </div>
      <div class="form row d-flex flex-row">
        <label for="staticPhone" class="col-sm-2 col-form-label mr-5">phone:</label>
        <input type="text" placeholder="02-xxxxxxxx" name="phone" class="col-sm-9 my-2">
      </div>
      <div class="form row d-flex flex-row">
        <label for="staticGoogle_map" class="col-sm-2 col-form-label mr-5">google_map:</label>
        <input type="text" placeholder="https://www.google.com.tw/maps/...." name="google_map" class="col-sm-9 my-2">  
      </div>
      <div class="form row d-flex flex-row">
        <label for="staticRating" class="col-sm-2 col-form-label mr-5">rating:</label>
        <input type="number" placeholder="0~5" name="rating" class="col-sm-9 my-2" min="0" max="5" step="0.1">   
      </div>  
      <div class="form row d-flex flex-row">
        <label for="staticDescription" class="col-sm-2 col-form-label mr-5">description:</label>
        <input type="text" placeholder="description" name="description" class="col-sm-9 my-2">
      </div>    
  </div>  
  <div class="footer d-flex justify-content-end mb-3" style="width:80vw">
    <button class="btn btn-primary" type="submit">Create</button>
  </div>  
</form>